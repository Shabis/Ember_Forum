{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="inquiry">Enter your Question</label>
        {{input value=inquiry id="inquiry"}}
      </div>

      <div class="form-group">
        <label for="author">Enter your Name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Enter a description</label>
        {{input value=notes id="notes"}}
      </div>

      <div class="form-group">
        <label for="screenshot">Enter a Screenshot of Your Code</label>
        {{input value=screenshot id="screenshot"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
