{{#if updateQuestionForm}}
  <h4>Update {{question.inquiry}}</h4>
  <div class="boxed">
    <h1>Post Your Question</h1>
    <form>
      <div class="form-group">
        <label for="inquiry">What is your Question</label>
        {{input value=inquiry id="inquiry" placeholder=question.inquiry}}
      </div>
      <div class="form-group">
        <label for="author">What is your Name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="notes">Please provide as much detail about your question as possible</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>
      <div class="form-group">
        <label for="screenshot">Enter the URL for Your Screenshot</label>
        {{input value=screenshot id="screenshot" placeholder=questions.screenshot}}
      </div>
      <button class="btn-default" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
